<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_closure_receipt.ClosureReceipt">
        <div class="o-closure-receipt">
            <h3 style="text-align:center; margin:0;">Kassenabschluss</h3>
            <div style="text-align:center; font-size:12px;">
                <t t-esc="data.company_name"/> – <t t-esc="data.pos_name"/>
            </div>
            <div style="text-align:center; font-size:12px; margin-bottom:6px;">
                <t t-esc="data.datetime_str"/>
            </div>
            <hr/>
            <div>
                <div>Gesamtumsatz: <span style="float:right"><t t-esc="data.amount_total_str"/></span></div>
                <div>Barumsatz: <span style="float:right"><t t-esc="data.amount_cash_sales_str"/></span></div>
                <t t-if="data.amount_invoice_str">
                    <div>Rechnungskauf: <span style="float:right"><t t-esc="data.amount_invoice_str"/></span></div>
                </t>
            </div>
            <hr/>
            <div>
                <div>Trinkgeld bar: <span style="float:right"><t t-esc="data.tips_cash_str"/></span></div>
                <t t-if="data.tips_card_manual_str">
                    <div>Trinkgeld Karte (manuell): <span style="float:right"><t t-esc="data.tips_card_manual_str"/></span></div>
                </t>
                <div style="font-weight:bold;">Gesamt-Trinkgeld: <span style="float:right"><t t-esc="data.tips_total_str"/></span></div>
            </div>
            <hr/>
            <div>
                <div>Soll-Barbestand: <span style="float:right"><t t-esc="data.target_cash_str"/></span></div>
                <div>Ist-Barbestand: <span style="float:right"><t t-esc="data.cashbox_end_str"/></span></div>
                <div style="font-weight:bold;">Abzuführen: <span style="float:right"><t t-esc="data.cash_to_withdraw_str"/></span></div>
            </div>
            <hr/>
            <div>
                <div>Kassierer: <span style="float:right"><t t-esc="data.cashier_name"/></span></div>
                <t t-if="data.session_name">
                    <div>Session: <span style="float:right"><t t-esc="data.session_name"/></span></div>
                </t>
            </div>
            <div style="text-align:center; margin-top:6px;">Vielen Dank!</div>
        </div>
    </t>
</templates>
