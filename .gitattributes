# Default normalize text
* text=auto

# Force CRLF for common source files in this repo
*.py  text eol=crlf
*.js  text eol=crlf
*.md  text eol=crlf
*.csv text eol=crlf
*.css text eol=crlf
*.scss text eol=crlf
*.json text eol=crlf

# Keep typical Unix files LF to avoid CI/runner issues
*.sh  text eol=lf
*.xml text eol=lf
*.po  text eol=lf